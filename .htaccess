<Files ~ "\.php~$">
Order allow,deny
Deny from all
</Files>

<IfModule mod_security.c>
	# Turn off mod_security filtering.  ezForum is a big boy, it doesn\'t need its hands held.
	SecFilterEngine Off

	# The below probably isn\'t needed, but better safe than sorry.
	SecFilterScanPOST Off
</IfModule>